generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  name           String
  movies         Movie[]
  email          String          @unique
  password       String
  emailSchedules EmailSchedule[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Movie {
  id             Int             @id @default(autoincrement())
  title          String          @unique
  userId         Int
  user           User            @relation(fields: [userId], references: [id])
  emailSchedules EmailSchedule[]
  originalTitle  String
  coverImage     String
  popularity     Float
  voteCount      Int
  score          Float
  tagline        String
  synopsis       String
  genres         String[]
  releaseDate    DateTime
  duration       Int
  status         String
  language       String
  budget         Float
  revenue        Float
  profit         Float
  trailerUrl     String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([title])
  @@index([releaseDate])
  @@index([score])
  @@index([duration])
}

model EmailSchedule {
  id           Int      @id @default(autoincrement())
  movieId      Int
  movie        Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  scheduledFor DateTime
  sent         Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([movieId])
  @@index([userId])
  @@index([scheduledFor])
  @@index([sent])
}
